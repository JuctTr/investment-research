# 应用配置
PORT=3000
NODE_ENV=development

# 数据库配置 (PostgreSQL)
# ⚠️ 默认开发环境密码，生产环境请修改
DATABASE_URL=postgresql://postgres:dev_password_change_me@localhost:5432/investment_research

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 配置
JWT_SECRET=your-jwt-secret-key-change-in-production
